@model IEnumerable<FoskorSecurityTransport.Models.Destination>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DestinationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DestinationID, @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DestinationID, @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DestinationID, @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>


</table>
